<h1>Bookstores</h1>

<%= link_to 'Add New Bookstore', new_bookstore_path %>

<br>

<% @bookstores.each do |bookstore| %>
    <h3><%= link_to bookstore.name, bookstore_path(bookstore) %></h3>
    <em>About the Bookstore:</em>
    <p><%= bookstore.description %></p>
    <em>Location</em>
    <p><%= bookstore.latitude %><p>
    <p><%= bookstore.longitude %></p>
    <%= link_to 'Edit', edit_bookstore_path(bookstore) %>
    <p><%= link_to 'Remove', bookstore, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>